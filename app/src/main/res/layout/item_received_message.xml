<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/sender_FnameTxt"
        android:text="First Name"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="1dp"
        android:id="@+id/sender_LnameTxt"
        android:text="Last Name"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/sender_FnameTxt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_LnameTxt"
        android:background="@drawable/green_round_rect"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="60dp"
        android:textSize="16dp"
        android:id="@+id/received_message_text"
        android:text="Hello this is a sample message"/>
</RelativeLayout>